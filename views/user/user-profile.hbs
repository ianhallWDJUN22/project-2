{{#if user}}
<h2 class="myPageTop">Hello, {{user.username}}!</h2>

<a class="myPageTop" id="myPageTopP" href="/create"><b>Create New Character</b></a>
{{/if}}

<h2>My Characters:</h2>
<div class="created-char-blocks">
{{#each user.characters}}
<div class="char-block">
<div class="char-image">
    <img src={{this.imageUrl}} height="210px">
</div>
<div class="char-info-all-chars">
<div>
    <h3>{{this.name}}</h3>
    <p>Race: {{this.race}}</p>
    <p>Class: {{this.dndclass}}</p>
</div>
<div>
    <a href="/characters/{{_id}}"><b>Character details</b></a>
</div>
</div>
</div>
{{/each}}
</div>

<style>
body {
  background-image: url('https://images.wallpaperscraft.com/image/single/ships_old_wreckage_beach_sea_sky_clouds_63095_1366x768.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
#navMyChars{
  background-color: rgba(194, 138, 26);
}
</style>