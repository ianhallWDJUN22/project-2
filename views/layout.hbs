<script>
  let d20 = {
    sides: 20,
    roll: function () {
      let randomNumber = Math.floor(Math.random() *
        this.sides) + 1;
      return randomNumber;
    }
  };

  function printNumber(number) {
    let d20Result = document.getElementById('d20Result');
    d20Result.innerHTML = number;
  }

  let d20Button = document.getElementById('d20Button');

  d20Button.onclick = function () {
    let result = d20.roll();
    printNumber(result);
  }

</script>
