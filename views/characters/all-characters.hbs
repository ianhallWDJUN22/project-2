<style>
body {
  background-image: url('/images/castle_waterfall_mountains.jpeg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
#navAllChars {
  background-color: rgba(194, 138, 26);
}
</style>

<div class="gallery-header-div">
  <h2 class="gallery-header">The Gallery</h2>
</div>

<div class="created-char-blocks">
        {{#each characters}}
    <div class="char-block">
        <div class="char-image">
           <img class="img-small" src={{this.imageUrl}} height="210px">
        </div>
        <div class="char-info-all-chars">
         <div>
          <h3>{{this.name}}</h3>
          <p>Race: {{this.race}}</p>
          <p>Class: {{this.dndclass}}</p>
        </div>
        <div>
          <a href="/characters/{{_id}}"><b>Character details</b></a>
        </div>
        </div>
    </div>
        {{/each}}
</div>


